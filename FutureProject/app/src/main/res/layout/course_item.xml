<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginTop="20px"
    android:layout_height="240px">
    <ImageView
        android:layout_centerVertical="true"
        android:src="@drawable/home_course"
        android:layout_marginLeft="30px"
        android:id="@+id/kecheng_imageView"
        android:layout_width="220px"
        android:layout_height="200px" />
    <ImageView
        android:id="@+id/type_imageView"
        android:layout_marginTop="168px"
        android:layout_marginLeft="198px"
        android:layout_width="40px"
        android:layout_height="40px" />
    <TextView
        android:id="@+id/kecheng_title"
        android:textSize="32px"
        android:textColor="#323232"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/kecheng_imageView"
        android:layout_alignLeft="@+id/kecheng_title2"
        android:layout_alignStart="@+id/kecheng_title2" />
    <TextView
        android:id="@+id/kecheng_title2"
        android:layout_toRightOf="@+id/kecheng_imageView"
        android:layout_marginLeft="40px"
        android:textSize="26px"
        android:textColor="#808080"
        android:layout_below="@id/kecheng_title"
        android:layout_marginTop="20px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/course_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28px"
        android:textColor="#636363"
        android:layout_toRightOf="@+id/kecheng_imageView"
        android:layout_marginLeft="40px"
        android:layout_below="@id/kecheng_title2"
        android:layout_marginTop="29px"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_rl"
        android:layout_toRightOf="@+id/kecheng_imageView"
        android:layout_marginLeft="40px"
        android:layout_below="@id/course_teacher_name"
        android:layout_marginTop="30px"
        ><TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kecheng_money"
        android:text="免费"
        android:textSize="18px"
        android:textColor="#bfbfbf"
        />
        <TextView
            android:id="@+id/kecheng_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#bfbfbf"
            android:textSize="18px"
            android:layout_toRightOf="@id/kecheng_money"
            android:layout_marginLeft="30px"
            />
        <TextView
            android:id="@+id/kecheng_volume"
            android:textColor="#bfbfbf"
            android:textSize="18px"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@id/kecheng_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>