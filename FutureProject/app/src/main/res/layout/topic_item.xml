<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginLeft="30px"
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/topic_imageView"
            android:src="@drawable/home_topic"
            android:layout_width="210px"
            android:layout_height="210px" />
        <ImageView
            android:layout_marginTop="158px"
            android:layout_marginLeft="158px"
            android:src="@drawable/home_wenben"
            android:layout_width="40px"
            android:layout_height="40px" />

        <TextView
            android:id="@+id/topic_title"
            android:layout_below="@+id/topic_imageView"
            android:text="店铺如何运营维护"
            android:textSize="24px"
            android:textColor="#2f2f2f"
            android:layout_marginTop="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/topic_type"
            android:layout_below="@+id/topic_title"
            android:text="四堂课/视频"
            android:textSize="22px"
            android:textColor="#555555"
            android:layout_marginTop="16px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    




</RelativeLayout>