<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/topic_litem_image"
        android:layout_marginTop="20px"
        android:layout_marginLeft="30px"
        android:src="@drawable/home_topic"
        android:layout_width="210px"
        android:layout_height="210px" />
    <ImageView
        android:layout_marginTop="178px"
        android:layout_marginLeft="188px"
        android:src="@drawable/home_wenben"
        android:layout_width="40px"
        android:layout_height="40px" />
    <TextView
        android:id="@+id/topic_litem_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24px"
        android:textColor="#2f2f2f"
        android:layout_toRightOf="@+id/topic_litem_image"
        android:layout_marginLeft="30px"
        android:layout_marginTop="60px"
        />
    <TextView
        android:id="@+id/topic_litem_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24px"
        android:textColor="#989898"
        android:layout_below="@+id/topic_litem_title"
        android:layout_toRightOf="@+id/topic_litem_image"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        />
    <TextView
        android:id="@+id/topic_litem_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24px"
        android:textColor="#989898"
        android:layout_below="@+id/topic_litem_title"
        android:layout_toRightOf="@+id/topic_litem_image"
        android:layout_marginLeft="30px"
        android:layout_marginTop="70px"
        />

</com.zhy.autolayout.AutoRelativeLayout>